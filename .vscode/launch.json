{
    "version": "0.2.0",
    "configurations": [
        {
            "presentation": {
                "group": "Start",
                "hidden": false
            },

            "name": "Launch OCR",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "OCR_adapter.py",
            // "args": [ "--selftest" ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",

            "env": {
                "RUNNING_IN_VSCODE": "True",
                // "CPAI_LOG_VERBOSITY": "Loud",
                "CPAI_PORT": "32168"
            },

            "python": "${workspaceFolder}/bin/windows/python39/venv/Scripts/python.exe",
            "windows": {
                "python": "${workspaceFolder}/bin/windows/python39/venv/Scripts/python.exe"
            },
            "linux": {
                "python": "${workspaceFolder}/bin/ubuntu/python38/venv/bin/python",
                // "python": "${workspaceFolder}/bin/debian/python38/venv/bin/python",
            },
            "osx": {
                "python": "${workspaceFolder}/bin/macos/python38/venv/bin/python",
            }
        },
        {
            "presentation": {
                "group": "Start",
                "hidden": false
            },

            "name": "Test OCR",
            "type": "debugpy",
            "justMyCode": false,
            "request": "launch",
            "program": "OCR_adapter.py",
            "args": [ "--selftest" ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",

            "env": {
                "RUNNING_IN_VSCODE": "True",
                // "CPAI_LOG_VERBOSITY": "Loud",
                "CPAI_PORT": "32168"
            },

            "python": "${workspaceFolder}/bin/windows/python39/venv/Scripts/python.exe",
            "windows": {
                "python": "${workspaceFolder}/bin/windows/python39/venv/Scripts/python.exe"
            },
            "linux": {
                "python": "${workspaceFolder}/bin/ubuntu/python38/venv/bin/python",
                // "python": "${workspaceFolder}/bin/debian/python38/venv/bin/python",
            },
            "osx": {
                "python": "${workspaceFolder}/bin/macos/python38/venv/bin/python",
            }
        }

    ]
}